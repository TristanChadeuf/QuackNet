{% extends 'base.html.twig' %}

{% block title %}Duck index{% endblock %}

{% block body %}

    <h1>Duck index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>DuckName</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for duck in ducks %}
            <tr>
                <td>{{ duck.id }}</td>
                <td>{{ duck.email }}</td>
                <td>{{ duck.roles ? duck.roles|json_encode : '' }}</td>
                <td>{{ duck.password }}</td>
                <td>{{ duck.firstName }}</td>
                <td>{{ duck.lastName }}</td>
                <td>{{ duck.duckName }}</td>
                <td>{{ duck.createdAt ? duck.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <button class="btn btn-lg btn-success"><a href="{{ path('app_duck_show', {'id': duck.id}) }}">show</a></button>
                    <button class="btn btn-lg btn-warning"><a href="{{ path('app_duck_edit', {'id': duck.id}) }}">Update</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-lg btn-primary"><a href="{{ path('app_duck_new') }}">Create new</a></button>
{% endblock %}
